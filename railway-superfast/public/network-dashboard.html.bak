<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NUPI Network Dashboard - Live Agent Tracking</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 100%);
            color: #ffffff;
            overflow-x: hidden;
        }
        
        .header {
            background: rgba(26, 26, 46, 0.95);
            padding: 20px;
            text-align: center;
            border-bottom: 2px solid #00ff88;
            box-shadow: 0 4px 20px rgba(0, 255, 136, 0.2);
        }
        
        .header h1 {
            font-size: 2.5em;
            background: linear-gradient(45deg, #00ff88, #00d4ff);
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            margin-bottom: 10px;
        }
        
        .container {
            max-width: 1600px;
            margin: 0 auto;
            padding: 20px;
        }
        
        .grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }
        
        .card {
            background: rgba(26, 26, 46, 0.8);
            border: 1px solid rgba(0, 255, 136, 0.3);
            border-radius: 12px;
            padding: 20px;
            box-shadow: 0 8px 32px rgba(0, 0, 0, 0.3);
            transition: transform 0.3s, box-shadow 0.3s;
        }
        
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 40px rgba(0, 255, 136, 0.4);
        }
        
        .card h3 {
            color: #00ff88;
            margin-bottom: 15px;
            font-size: 1.3em;
            border-bottom: 2px solid rgba(0, 255, 136, 0.3);
            padding-bottom: 10px;
        }
        
        .agent-status {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 10px;
            background: rgba(0, 0, 0, 0.3);
            border-radius: 8px;
            margin-bottom: 10px;
        }
        
        .status-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
            margin-right: 10px;
            animation: pulse 2s infinite;
        }
        
        .status-online { background: #00ff88; box-shadow: 0 0 10px #00ff88; }
        .status-offline { background: #ff4444; box-shadow: 0 0 10px #ff4444; }
        
        @keyframes pulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.5; }
        }
        
        .network-canvas {
            width: 100%;
            height: 600px;
            background: rgba(0, 0, 0, 0.3);
            border: 1px solid rgba(0, 255, 136, 0.3);
            border-radius: 12px;
            margin-top: 20px;
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(120px, 1fr));
            gap: 10px;
            margin-top: 15px;
        }
        
        .stat-box {
            background: rgba(0, 255, 136, 0.1);
            padding: 15px;
            border-radius: 8px;
            text-align: center;
            border: 1px solid rgba(0, 255, 136, 0.2);
        }
        
        .stat-value {
            font-size: 2em;
            color: #00ff88;
            font-weight: bold;
        }
        
        .stat-label {
            font-size: 0.9em;
            color: #aaa;
            margin-top: 5px;
        }
        
        .device-list {
            max-height: 300px;
            overflow-y: auto;
            margin-top: 10px;
        }
        
        .device-item {
            background: rgba(0, 0, 0, 0.2);
            padding: 10px;
            border-radius: 6px;
            margin-bottom: 8px;
            border-left: 3px solid #00ff88;
        }
        
        .log-entry {
            padding: 8px;
            border-left: 2px solid #00d4ff;
            margin-bottom: 5px;
            font-size: 0.9em;
            background: rgba(0, 212, 255, 0.05);
        }
        
        .timestamp {
            color: #00d4ff;
            font-size: 0.8em;
        }
    </style>
</head>
<body>
    <div class="header">
        <h1>NUPI Network Dashboard</h1>
        <p>Live Agent Tracking & Network Topology</p>
    </div>
    
    <div class="container">
        <!-- Agent Status Cards -->
        <div class="grid">
            <div class="card">
                <h3>Active Agents</h3>
                <div id="agentsList"></div>
                <div class="stats-grid" style="margin-top: 20px;">
                    <div class="stat-box">
                        <div class="stat-value" id="totalAgents">0</div>
                        <div class="stat-label">Total Agents</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-value" id="onlineAgents">0</div>
                        <div class="stat-label">Online</div>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <h3>Cloud Agent Status</h3>
                <div id="cloudStatus"></div>
                <div class="stats-grid" style="margin-top: 20px;">
                    <div class="stat-box">
                        <div class="stat-value" id="scanCount">0</div>
                        <div class="stat-label">Scans</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-value" id="devicesFound">0</div>
                        <div class="stat-label">Devices</div>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <h3>Network Summary</h3>
                <div class="stats-grid">
                    <div class="stat-box">
                        <div class="stat-value" id="networkCount">0</div>
                        <div class="stat-label">Networks</div>
                    </div>
                    <div class="stat-box">
                        <div class="stat-value" id="totalDevices">0</div>
                        <div class="stat-label">Total Devices</div>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- Network Topology Visualization -->
        <div class="card">
            <h3>Network Topology Map</h3>
            <canvas id="networkCanvas" class="network-canvas"></canvas>
        </div>
        
        <!-- Discovered Devices -->
        <div class="grid">
            <div class="card">
                <h3>Discovered Devices</h3>
                <div class="device-list" id="devicesList"></div>
            </div>
            
            <div class="card">
                <h3>Activity Log</h3>
                <div class="device-list" id="activityLog"></div>
            </div>
        </div>
    </div>
    
    <script>
        let agents = [];
        let devices = [];
        let canvas, ctx;
        
        // Initialize canvas
        window.onload = function() {
            canvas = document.getElementById('networkCanvas');
            ctx = canvas.getContext('2d');
            canvas.width = canvas.offsetWidth;
            canvas.height = canvas.offsetHeight;
            
            // Start updates
            updateDashboard();
            setInterval(updateDashboard, 3000);
            setInterval(drawNetwork, 100);
        };
        
        // Fetch data from API
        async function updateDashboard() {
            try {
                // Get agent status
                const agentRes = await fetch('/api/agent-status');
                const agentData = await agentRes.json();
                
                // Get travelling agents
                const travelRes = await fetch('/api/travelling-agent/status');
                const travelData = await travelRes.json();
                
                // Get network scan
                const scanRes = await fetch('/api/network-scan');
                const scanData = await scanRes.json();
                
                // Get health data
                const healthRes = await fetch('/health');
                const healthData = await healthRes.json();
                
                updateAgentsList(healthData);
                updateCloudStatus(agentData, healthData);
                updateNetworkStats(scanData, travelData);
                logActivity(`Scan complete: ${scanData.devices_found || 0} devices found`);
                
            } catch (error) {
                console.error('Update error:', error);
                logActivity(`Error updating: ${error.message}`);
            }
        }
        
        function updateAgentsList(healthData) {
            const agentsList = document.getElementById('agentsList');
            const localAgents = healthData.localAgents || { total: 0, online: 0 };
            
            agents = [
                { name: 'SuperFast Cloud Agent', status: 'online', type: 'cloud' },
                { name: 'Travelling Agent', status: localAgents.online > 0 ? 'online' : 'offline', type: 'local' },
                { name: 'Multi-Network Agent', status: localAgents.online > 1 ? 'online' : 'offline', type: 'local' },
                { name: 'Desktop Agent', status: localAgents.online > 2 ? 'online' : 'offline', type: 'local' }
            ];
            
            agentsList.innerHTML = agents.map(agent => `
                <div class="agent-status">
                    <div style="display: flex; align-items: center;">
                        <span class="status-dot status-${agent.status}"></span>
                        <span>${agent.name}</span>
                    </div>
                    <span style="color: #00d4ff; font-size: 0.9em;">${agent.type}</span>
                </div>
            `).join('');
            
            document.getElementById('totalAgents').textContent = agents.length;
            document.getElementById('onlineAgents').textContent = agents.filter(a => a.status === 'online').length;
        }
        
        function updateCloudStatus(agentData, healthData) {
            const cloudStatus = document.getElementById('cloudStatus');
            cloudStatus.innerHTML = `
                <div class="agent-status">
                    <span>Status: ${healthData.status || 'unknown'}</span>
                    <span class="status-dot status-online"></span>
                </div>
                <div class="agent-status">
                    <span>AI Creator: ${healthData.aiCreatorActive ? 'Active' : 'Inactive'}</span>
                </div>
            `;
            
            document.getElementById('scanCount').textContent = agentData.scan_count || 0;
            document.getElementById('devicesFound').textContent = agentData.devices_found || 0;
        }
        
        function updateNetworkStats(scanData, travelData) {
            document.getElementById('networkCount').textContent = 1; // Will be dynamic later
            document.getElementById('totalDevices').textContent = scanData.devices_found || 0;
            
            // Update devices list
            const devicesList = document.getElementById('devicesList');
            if (scanData.devices_found > 0) {
                devicesList.innerHTML = `<div class="device-item">Scanning networks... ${scanData.devices_found} devices detected</div>`;
            } else {
                devicesList.innerHTML = '<div class="device-item">No devices found yet</div>';
            }
        }
        
        function logActivity(message) {
            const log = document.getElementById('activityLog');
            const now = new Date().toLocaleTimeString();
            const entry = `<div class="log-entry"><span class="timestamp">[${now}]</span> ${message}</div>`;
            log.innerHTML = entry + log.innerHTML;
            
            // Keep only last 20 entries
            const entries = log.querySelectorAll('.log-entry');
            if (entries.length > 20) {
                entries[entries.length - 1].remove();
            }
        }
        
        // Draw network topology
        function drawNetwork() {
            if (!ctx) return;
            
            ctx.fillStyle = 'rgba(15, 15, 35, 0.1)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            const centerX = canvas.width / 2;
            const centerY = canvas.height / 2;
            const radius = 150;
            
            // Draw cloud agent in center
            drawNode(centerX, centerY, 'Cloud', '#00ff88', 30);
            
            // Draw local agents around center
            agents.forEach((agent, i) => {
                if (agent.type === 'local') {
                    const angle = (i * Math.PI * 2 / 3) - Math.PI / 2;
                    const x = centerX + Math.cos(angle) * radius;
                    const y = centerY + Math.sin(angle) * radius;
                    
                    // Draw connection line
                    ctx.strokeStyle = agent.status === 'online' ? 'rgba(0, 255, 136, 0.3)' : 'rgba(255, 68, 68, 0.3)';
                    ctx.lineWidth = 2;
                    ctx.beginPath();
                    ctx.moveTo(centerX, centerY);
                    ctx.lineTo(x, y);
                    ctx.stroke();
                    
                    // Draw agent node
                    drawNode(x, y, agent.name.split(' ')[0], agent.status === 'online' ? '#00d4ff' : '#ff4444', 20);
                }
            });
            
            // Draw devices as smaller nodes
            const deviceCount = parseInt(document.getElementById('totalDevices').textContent) || 0;
            for (let i = 0; i < Math.min(deviceCount, 12); i++) {
                const angle = (i * Math.PI * 2 / 12);
                const x = centerX + Math.cos(angle) * (radius * 2);
                const y = centerY + Math.sin(angle) * (radius * 2);
                drawNode(x, y, '', '#ffffff', 8);
            }
        }
        
        function drawNode(x, y, label, color, size) {
            // Draw glow
            ctx.shadowBlur = 20;
            ctx.shadowColor = color;
            
            // Draw circle
            ctx.fillStyle = color;
            ctx.beginPath();
            ctx.arc(x, y, size, 0, Math.PI * 2);
            ctx.fill();
            
            ctx.shadowBlur = 0;
            
            // Draw label
            if (label) {
                ctx.fillStyle = '#ffffff';
                ctx.font = '12px Arial';
                ctx.textAlign = 'center';
                ctx.fillText(label, x, y + size + 15);
            }
        }
        
        // Initial log
        setTimeout(() => logActivity('Dashboard initialized'), 100);
    </script>
</body>
</html>
