<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NUPI - Live Dashboard</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Oxygen, Ubuntu, Cantarell, sans-serif;
            background: #0f0f23;
            color: #fff;
            padding: 20px;
        }

        .header {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            padding: 30px;
            border-radius: 15px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(102, 126, 234, 0.3);
        }

        .header h1 {
            font-size: 36px;
            margin-bottom: 10px;
        }

        .header p {
            opacity: 0.9;
            font-size: 16px;
        }

        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
            gap: 20px;
            margin-bottom: 30px;
        }

        .stat-card {
            background: #1a1a2e;
            padding: 25px;
            border-radius: 12px;
            border: 1px solid #2a2a3e;
            transition: transform 0.2s;
        }

        .stat-card:hover {
            transform: translateY(-5px);
            border-color: #667eea;
        }

        .stat-card .label {
            font-size: 14px;
            color: #888;
            margin-bottom: 10px;
        }

        .stat-card .value {
            font-size: 36px;
            font-weight: 700;
            color: #667eea;
        }

        .stat-card .icon {
            font-size: 32px;
            margin-bottom: 10px;
        }

        .section {
            background: #1a1a2e;
            padding: 25px;
            border-radius: 12px;
            margin-bottom: 20px;
            border: 1px solid #2a2a3e;
        }

        .section h2 {
            margin-bottom: 20px;
            font-size: 24px;
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .device-list {
            display: grid;
            gap: 15px;
        }

        .device-item {
            background: #0f0f23;
            padding: 20px;
            border-radius: 10px;
            border-left: 4px solid #667eea;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .device-info h3 {
            margin-bottom: 8px;
            font-size: 18px;
        }

        .device-info p {
            color: #888;
            font-size: 14px;
        }

        .device-status {
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
        }

        .status-online {
            background: #28a745;
            color: white;
        }

        .status-offline {
            background: #dc3545;
            color: white;
        }

        .status-pending {
            background: #ffc107;
            color: #000;
        }

        .alert-list {
            display: grid;
            gap: 12px;
        }

        .alert-item {
            background: #2d1f1f;
            border-left: 4px solid #dc3545;
            padding: 15px;
            border-radius: 8px;
        }

        .alert-item.warning {
            background: #2d2a1f;
            border-left-color: #ffc107;
        }

        .alert-item.info {
            background: #1f2d2d;
            border-left-color: #17a2b8;
        }

        .alert-header {
            display: flex;
            justify-content: space-between;
            margin-bottom: 8px;
        }

        .alert-title {
            font-weight: 600;
        }

        .alert-time {
            color: #888;
            font-size: 12px;
        }

        .alert-message {
            color: #ccc;
            font-size: 14px;
        }

        .refresh-indicator {
            position: fixed;
            top: 20px;
            right: 20px;
            background: #667eea;
            color: white;
            padding: 10px 20px;
            border-radius: 25px;
            font-size: 14px;
            font-weight: 600;
            box-shadow: 0 5px 15px rgba(102, 126, 234, 0.4);
            z-index: 1000;
            animation: pulse 2s infinite;
        }

        @keyframes pulse {
            0%, 100% {
                opacity: 1;
            }
            50% {
                opacity: 0.7;
            }
        }

        .empty-state {
            text-align: center;
            padding: 60px 20px;
            color: #666;
        }

        .empty-state .icon {
            font-size: 64px;
            margin-bottom: 20px;
            opacity: 0.5;
        }

        .spending-chart {
            display: grid;
            gap: 12px;
            margin-top: 15px;
        }

        .spending-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 12px;
            background: #0f0f23;
            border-radius: 8px;
        }

        .spending-bar {
            height: 6px;
            background: #667eea;
            border-radius: 3px;
            margin-top: 6px;
        }
    </style>
</head>
<body>
    <div class="refresh-indicator" id="refreshIndicator">
        üîÑ Live Updates Active
    </div>

    <div class="header">
        <h1>ü§ñ NUPI Live Dashboard</h1>
        <p>Real-time monitoring of all connected devices and security insights</p>
    </div>

    <div class="stats-grid">
        <div class="stat-card">
            <div class="icon">üì±</div>
            <div class="label">Devices Monitored</div>
            <div class="value" id="deviceCount">0</div>
        </div>
        <div class="stat-card">
            <div class="icon">‚ö†Ô∏è</div>
            <div class="label">Security Alerts</div>
            <div class="value" id="alertCount">0</div>
        </div>
        <div class="stat-card">
            <div class="icon">üí≥</div>
            <div class="label">Vulnerabilities Found</div>
            <div class="value" id="vulnCount">0</div>
        </div>
        <div class="stat-card">
            <div class="icon">üí∞</div>
            <div class="label">Potential Savings</div>
            <div class="value" id="savingsAmount">$0</div>
        </div>
    </div>

    <div class="section">
        <h2>üì± Connected Devices</h2>
        <div class="device-list" id="deviceList">
            <div class="empty-state">
                <div class="icon">üîç</div>
                <p>No devices connected yet</p>
                <p style="font-size: 14px; margin-top: 10px;">Deploy an agent to start monitoring</p>
            </div>
        </div>
    </div>

    <div class="section">
        <h2>‚ö†Ô∏è Security Alerts</h2>
        <div class="alert-list" id="alertList">
            <div class="empty-state">
                <div class="icon">‚úÖ</div>
                <p>No alerts - Everything looks good!</p>
            </div>
        </div>
    </div>

    <div class="section">
        <h2>üí∞ Spending Analysis</h2>
        <div class="spending-chart" id="spendingChart">
            <div class="empty-state">
                <div class="icon">üìä</div>
                <p>No spending data available yet</p>
            </div>
        </div>
    </div>

    <script>
        let updateInterval = null;

        async function updateDashboard() {
            try {
                // Fetch dashboard data
                const [securityData, agentsData, androidData, routerData] = await Promise.all([
                    fetch('/api/security/dashboard').then(r => r.json()),
                    fetch('/api/agents/list').then(r => r.json()),
                    fetch('/api/android').then(r => r.json()),
                    fetch('/api/routers').then(r => r.json())
                ]);

                // Update stats
                const totalDevices = (agentsData.count || 0) + (androidData.count || 0) + (routerData.count || 0);
                document.getElementById('deviceCount').textContent = totalDevices;
                document.getElementById('alertCount').textContent = securityData.summary?.totalVulnerabilities || 0;
                document.getElementById('vulnCount').textContent = securityData.summary?.devicesWithIssues || 0;
                
                // Calculate potential savings (estimate)
                const savings = (securityData.summary?.totalVulnerabilities || 0) * 50;
                document.getElementById('savingsAmount').textContent = '$' + savings;

                // Update device list
                updateDeviceList(agentsData, androidData, routerData);

                // Update alerts
                updateAlerts(securityData);

                // Update refresh indicator
                document.getElementById('refreshIndicator').textContent = 'üîÑ Updated ' + new Date().toLocaleTimeString();
                
            } catch (error) {
                console.error('Dashboard update failed:', error);
            }
        }

        function updateDeviceList(agents, android, routers) {
            const deviceList = document.getElementById('deviceList');
            const devices = [
                ...(agents.agents || []).map(a => ({
                    name: a.deviceId || 'Desktop Agent',
                    type: 'üíª Desktop',
                    status: a.status,
                    lastSeen: a.lastSeen || 'Never'
                })),
                ...(android.devices || []).map(d => ({
                    name: d.deviceInfo?.model || 'Android Device',
                    type: 'üì± Android',
                    status: 'online',
                    lastSeen: d.timestamp
                })),
                ...(routers.routers || []).map(r => ({
                    name: r.routerInfo?.model || 'WiFi Router',
                    type: 'üåê Router',
                    status: 'online',
                    lastSeen: r.timestamp
                }))
            ];

            if (devices.length === 0) {
                deviceList.innerHTML = `
                    <div class="empty-state">
                        <div class="icon">üîç</div>
                        <p>No devices connected yet</p>
                        <p style="font-size: 14px; margin-top: 10px;">Deploy an agent to start monitoring</p>
                    </div>
                `;
                return;
            }

            deviceList.innerHTML = devices.map(device => `
                <div class="device-item">
                    <div class="device-info">
                        <h3>${device.type} ${device.name}</h3>
                        <p>Last seen: ${formatTime(device.lastSeen)}</p>
                    </div>
                    <div class="device-status status-${device.status}">
                        ${device.status.toUpperCase()}
                    </div>
                </div>
            `).join('');
        }

        async function updateAlerts(securityData) {
            const alertList = document.getElementById('alertList');
            
            try {
                const alertsResponse = await fetch('/api/security/alerts');
                const alertsData = await alertsResponse.json();
                
                const alerts = alertsData.alerts || [];

                if (alerts.length === 0) {
                    alertList.innerHTML = `
                        <div class="empty-state">
                            <div class="icon">‚úÖ</div>
                            <p>No alerts - Everything looks good!</p>
                        </div>
                    `;
                    return;
                }

                alertList.innerHTML = alerts.slice(0, 10).map(alert => `
                    <div class="alert-item ${alert.severity || 'warning'}">
                        <div class="alert-header">
                            <div class="alert-title">${alert.type || 'Security Alert'}</div>
                            <div class="alert-time">${formatTime(alert.timestamp)}</div>
                        </div>
                        <div class="alert-message">${alert.message || 'Vulnerability detected'}</div>
                    </div>
                `).join('');
            } catch (error) {
                console.error('Failed to fetch alerts:', error);
            }
        }

        function formatTime(timestamp) {
            if (!timestamp || timestamp === 'Never') return 'Never';
            try {
                const date = new Date(timestamp);
                const now = new Date();
                const diff = now - date;
                const minutes = Math.floor(diff / 60000);
                const hours = Math.floor(diff / 3600000);
                const days = Math.floor(diff / 86400000);

                if (minutes < 1) return 'Just now';
                if (minutes < 60) return `${minutes}m ago`;
                if (hours < 24) return `${hours}h ago`;
                return `${days}d ago`;
            } catch {
                return 'Unknown';
            }
        }

        // Start live updates
        updateDashboard();
        updateInterval = setInterval(updateDashboard, 5000); // Update every 5 seconds

        // Cleanup on page unload
        window.addEventListener('beforeunload', () => {
            if (updateInterval) clearInterval(updateInterval);
        });
    </script>
</body>
</html>
