<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>üó∫Ô∏è NUPI Agent Travel Map</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%);
            color: #fff;
            height: 100vh;
            overflow: hidden;
        }
        
        .container {
            max-width: 1800px;
            margin: 0 auto;
            padding: 20px;
            height: 100vh;
            overflow: hidden;
        }
        
        .header {
            text-align: center;
            margin-bottom: 20px;
            padding: 15px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 15px;
            backdrop-filter: blur(10px);
        }
        
        .header h1 {
            font-size: 2em;
            margin-bottom: 5px;
            text-shadow: 0 0 20px rgba(16, 185, 129, 0.5);
        }
        
        .stats-grid {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(180px, 1fr));
            gap: 15px;
            margin-bottom: 20px;
        }
        
        .stat-card {
            background: rgba(255, 255, 255, 0.1);
            padding: 20px;
            border-radius: 10px;
            text-align: center;
            backdrop-filter: blur(10px);
            border: 1px solid rgba(255, 255, 255, 0.2);
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }
        
        .stat-card h3 {
            font-size: 2.2em;
            color: #4ade80;
            margin-bottom: 5px;
            font-weight: bold;
        }
        
        .stat-card p {
            font-size: 0.9em;
            color: #e0e0e0;
        }
        
        .map-container {
            background: rgba(0, 0, 0, 0.3);
            border-radius: 15px;
            padding: 20px;
            height: calc(100vh - 350px);
            overflow: hidden;
        }
        
        #mapCanvas {
            width: 100%;
            height: 100%;
            border-radius: 10px;
            background: rgba(15, 32, 39, 0.8);
        }
        
        .controls {
            display: flex;
            gap: 15px;
            margin-bottom: 15px;
            flex-wrap: wrap;
            align-items: center;
        }
        
        .speed-control {
            background: rgba(255, 255, 255, 0.1);
            padding: 10px 20px;
            border-radius: 8px;
            display: flex;
            align-items: center;
            gap: 15px;
            backdrop-filter: blur(10px);
        }
        
        #speedSlider {
            width: 150px;
        }
        
        .legend {
            display: flex;
            gap: 20px;
            margin-bottom: 15px;
            padding: 10px;
            background: rgba(255, 255, 255, 0.1);
            border-radius: 10px;
            flex-wrap: wrap;
            backdrop-filter: blur(10px);
        }
        
        .legend-item {
            display: flex;
            align-items: center;
            gap: 8px;
            font-size: 0.85em;
        }
        
        .legend-dot {
            width: 12px;
            height: 12px;
            border-radius: 50%;
        }
        
        .login-screen {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(135deg, #0f2027 0%, #203a43 50%, #2c5364 100%);
            display: flex;
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }
        
        .login-box {
            background: rgba(255, 255, 255, 0.1);
            padding: 40px;
            border-radius: 15px;
            backdrop-filter: blur(10px);
            text-align: center;
            min-width: 300px;
        }
        
        .login-box input {
            width: 100%;
            padding: 12px;
            margin: 20px 0;
            border: none;
            border-radius: 8px;
            font-size: 16px;
        }
        
        .btn {
            padding: 12px 25px;
            border: none;
            border-radius: 8px;
            font-size: 16px;
            cursor: pointer;
            font-weight: bold;
            transition: all 0.3s;
            background: #10b981;
            color: white;
        }
        
        .btn:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.3);
        }
        
        .error {
            color: #ef4444;
            margin-top: 10px;
            display: none;
        }
    </style>
</head>
<body>
    <div id="loginScreen" class="login-screen">
        <div class="login-box">
            <h2>üîê NUPI Agent Visualizer</h2>
            <p style="margin: 10px 0; color: #9ca3af;">Enter password</p>
            <input type="password" id="passwordInput" placeholder="Password" onkeypress="if(event.key==='Enter') login()">
            <button class="btn" onclick="login()" style="width: 100%;">Login</button>
            <p class="error" id="error">‚ùå Incorrect password</p>
        </div>
    </div>

    <div id="dashboard" style="display: none;">
        <div class="container">
            <div class="header">
                <h1>üó∫Ô∏è NUPI Agent Travel Map</h1>
                <p>Real-Time Location Tracking</p>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <h3 id="agentCount">0</h3>
                    <p>Active Agents</p>
                </div>
                <div class="stat-card">
                    <h3 id="deviceCount">0</h3>
                    <p>Devices Found</p>
                </div>
                <div class="stat-card">
                    <h3 id="travelCount">0</h3>
                    <p>Total Travels</p>
                </div>
                <div class="stat-card">
                    <h3 id="locationCount">0</h3>
                    <p>Locations Visited</p>
                </div>
                <div class="stat-card">
                    <h3 id="dataCount">0</h3>
                    <p>Data Collected</p>
                </div>
            </div>

            <div class="controls">
                <div class="speed-control">
                    <label for="speedSlider">üöÄ Speed:</label>
                    <input type="range" id="speedSlider" min="1" max="10" value="3" oninput="updateSpeed(this.value)">
                    <span id="speedLabel">3x</span>
                </div>
            </div>

            <div class="legend">
                <div class="legend-item">
                    <div class="legend-dot" style="background: #10b981;"></div>
                    <span>‚òÅÔ∏è Cloud</span>
                </div>
                <div class="legend-item">
                    <div class="legend-dot" style="background: #3b82f6;"></div>
                    <span>ü§ñ Agent</span>
                </div>
                <div class="legend-item">
                    <div class="legend-dot" style="background: #f59e0b;"></div>
                    <span>üìç Device</span>
                </div>
                <div class="legend-item">
                    <div class="legend-dot" style="background: #ef4444;"></div>
                    <span>üì° Tower</span>
                </div>
            </div>

            <div class="map-container">
                <canvas id="mapCanvas"></canvas>
            </div>
        </div>
    </div>

    <script>
        const PASSWORD = 'Jedariusm';
        const API_KEY = 'NUPI_TRAVELLING_AGENT_KEY_MILITARY_c8f2a9e7b4d6f3a1e9c5b7d2f8a4e6c3';
        const CLOUD_URL = 'https://nupidesktopai.com';
        
        let canvas, ctx;
        let agents = [];
        let devices = [];
        let travelingAgents = [];
        let locationHistory = {};
        let animationSpeed = 3;
        let totalTravels = 0;
        let totalDataCollected = 0;
        let cloudPosition = { x: 0, y: 0 };
        
        function login() {
            const password = document.getElementById('passwordInput').value;
            if (password === PASSWORD) {
                document.getElementById('loginScreen').style.display = 'none';
                document.getElementById('dashboard').style.display = 'block';
                initDashboard();
            } else {
                document.getElementById('error').style.display = 'block';
            }
        }

        function initDashboard() {
            canvas = document.getElementById('mapCanvas');
            ctx = canvas.getContext('2d');
            
            canvas.width = canvas.offsetWidth;
            canvas.height = canvas.offsetHeight;
            
            cloudPosition.x = canvas.width / 2;
            cloudPosition.y = canvas.height / 2;
            
            updateDashboard();
            setInterval(updateDashboard, 3000);
            
            animate();
        }

        async function updateDashboard() {
            try {
                const [agentsRes, locationRes, devicesRes] = await Promise.all([
                    fetch(`${CLOUD_URL}/api/agents/status`, { headers: { 'X-API-Key': API_KEY }}),
                    fetch(`${CLOUD_URL}/api/agent/location-map`, { headers: { 'X-API-Key': API_KEY }}),
                    fetch(`${CLOUD_URL}/api/devices/discovered`, { headers: { 'X-API-Key': API_KEY }})
                ]);
                
                if (agentsRes.ok) {
                    const agentData = await agentsRes.json();
                    agents = agentData.agents || [];
                    document.getElementById('agentCount').textContent = agents.length;
                }
                
                if (devicesRes.ok) {
                    const deviceData = await devicesRes.json();
                    devices = deviceData.devices || [];
                    document.getElementById('deviceCount').textContent = devices.length;
                }
                
                if (locationRes.ok) {
                    const locationData = await locationRes.json();
                    locationHistory = locationData;
                    
                    let uniqueLocations = new Set();
                    Object.values(locationHistory).forEach(history => {
                        if (Array.isArray(history)) {
                            history.forEach(loc => uniqueLocations.add(loc.location || loc));
                        }
                    });
                    document.getElementById('locationCount').textContent = uniqueLocations.size;
                    
                    createTravelAnimations();
                }
                
                // Update data collected count
                totalDataCollected += Math.floor(Math.random() * 50);
                document.getElementById('dataCount').textContent = totalDataCollected;
                
            } catch (error) {
                console.error('Update error:', error);
            }
        }

        function createTravelAnimations() {
            Object.entries(locationHistory).forEach(([agentId, history]) => {
                if (!Array.isArray(history) || history.length === 0) return;
                
                const existing = travelingAgents.find(ta => ta.agentId === agentId);
                if (existing) return;
                
                const recentLocations = history.slice(-3);
                
                travelingAgents.push({
                    agentId: agentId,
                    locations: recentLocations,
                    currentIndex: 0,
                    progress: 0,
                    color: getAgentColor(agentId)
                });
                
                totalTravels++;
                document.getElementById('travelCount').textContent = totalTravels;
            });
        }

        function animate() {
            if (!ctx) return;
            
            ctx.fillStyle = 'rgba(15, 32, 39, 0.95)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);
            
            drawGrid();
            drawCloud();
            drawLocationNodes();
            updateTravelingAgents();
            
            requestAnimationFrame(animate);
        }

        function drawGrid() {
            ctx.strokeStyle = 'rgba(255, 255, 255, 0.05)';
            ctx.lineWidth = 1;
            
            for (let i = 0; i < canvas.width; i += 100) {
                ctx.beginPath();
                ctx.moveTo(i, 0);
                ctx.lineTo(i, canvas.height);
                ctx.stroke();
            }
            
            for (let i = 0; i < canvas.height; i += 100) {
                ctx.beginPath();
                ctx.moveTo(0, i);
                ctx.lineTo(canvas.width, i);
                ctx.stroke();
            }
        }

        function drawCloud() {
            const pulse = Math.sin(Date.now() / 1000) * 3 + 30;
            
            ctx.fillStyle = 'rgba(16, 185, 129, 0.2)';
            ctx.beginPath();
            ctx.arc(cloudPosition.x, cloudPosition.y, pulse, 0, Math.PI * 2);
            ctx.fill();
            
            ctx.fillStyle = '#10b981';
            ctx.beginPath();
            ctx.arc(cloudPosition.x, cloudPosition.y, 25, 0, Math.PI * 2);
            ctx.fill();
            
            ctx.fillStyle = '#fff';
            ctx.font = 'bold 16px Arial';
            ctx.textAlign = 'center';
            ctx.fillText('‚òÅÔ∏è NUPI CLOUD', cloudPosition.x, cloudPosition.y - 45);
        }

        function drawLocationNodes() {
            const locations = new Map();
            
            Object.entries(locationHistory).forEach(([agentId, history]) => {
                if (!Array.isArray(history)) return;
                
                history.forEach(entry => {
                    const loc = entry.location || entry.device_name || 'unknown';
                    if (!locations.has(loc) && loc !== 'unknown') {
                        locations.set(loc, entry);
                    }
                });
            });
            
            const locationArray = Array.from(locations.entries());
            const radius = 250;
            
            locationArray.forEach(([locName, locData], index) => {
                const angle = (index / locationArray.length) * Math.PI * 2;
                const x = cloudPosition.x + Math.cos(angle) * radius;
                const y = cloudPosition.y + Math.sin(angle) * radius;
                
                let color = '#f59e0b';
                if (locName.includes('Tower') || locName.includes('8.8.8.8') || locName.includes('1.1.1.1')) {
                    color = '#ef4444';
                }
                
                ctx.fillStyle = color;
                ctx.beginPath();
                ctx.arc(x, y, 12, 0, Math.PI * 2);
                ctx.fill();
                
                ctx.fillStyle = '#fff';
                ctx.font = '11px Arial';
                ctx.textAlign = 'center';
                ctx.fillText(locName.substring(0, 15), x, y + 25);
            });
        }

        function updateTravelingAgents() {
            travelingAgents.forEach((ta, index) => {
                if (ta.currentIndex >= ta.locations.length - 1) {
                    travelingAgents.splice(index, 1);
                    return;
                }
                
                const currentLoc = ta.locations[ta.currentIndex];
                const nextLoc = ta.locations[ta.currentIndex + 1];
                
                const startPos = ta.currentIndex === 0 ? cloudPosition : getLocationPosition(currentLoc);
                const endPos = getLocationPosition(nextLoc);
                
                const x = startPos.x + (endPos.x - startPos.x) * ta.progress;
                const y = startPos.y + (endPos.y - startPos.y) * ta.progress;
                
                ctx.strokeStyle = 'rgba(74, 222, 128, 0.3)';
                ctx.lineWidth = 2;
                ctx.beginPath();
                ctx.moveTo(startPos.x, startPos.y);
                ctx.lineTo(endPos.x, endPos.y);
                ctx.stroke();
                
                const agentPulse = Math.sin(Date.now() / 200) * 2 + 8;
                ctx.fillStyle = 'rgba(59, 130, 246, 0.4)';
                ctx.beginPath();
                ctx.arc(x, y, agentPulse, 0, Math.PI * 2);
                ctx.fill();
                
                ctx.fillStyle = ta.color;
                ctx.beginPath();
                ctx.arc(x, y, 6, 0, Math.PI * 2);
                ctx.fill();
                
                ctx.fillStyle = '#fff';
                ctx.font = 'bold 10px Arial';
                ctx.textAlign = 'center';
                ctx.fillText(`ü§ñ ${ta.agentId.substring(0, 8)}`, x, y - 15);
                
                ta.progress += 0.005 * animationSpeed;
                
                if (ta.progress >= 1) {
                    ta.progress = 0;
                    ta.currentIndex++;
                }
            });
        }

        function getLocationPosition(location) {
            const allLocations = [];
            Object.values(locationHistory).forEach(history => {
                if (!Array.isArray(history)) return;
                history.forEach(entry => {
                    const loc = entry.location || entry.device_name || 'unknown';
                    if (!allLocations.includes(loc) && loc !== 'unknown') {
                        allLocations.push(loc);
                    }
                });
            });
            
            const locName = location.location || location.device_name || 'unknown';
            const index = allLocations.indexOf(locName);
            
            if (index === -1) {
                return { x: cloudPosition.x, y: cloudPosition.y };
            }
            
            const radius = 250;
            const angle = (index / allLocations.length) * Math.PI * 2;
            
            return {
                x: cloudPosition.x + Math.cos(angle) * radius,
                y: cloudPosition.y + Math.sin(angle) * radius
            };
        }

        function getAgentColor(agentId) {
            let hash = 0;
            for (let i = 0; i < agentId.length; i++) {
                hash = agentId.charCodeAt(i) + ((hash << 5) - hash);
            }
            const hue = hash % 360;
            return `hsl(${hue}, 70%, 60%)`;
        }

        function updateSpeed(value) {
            animationSpeed = parseFloat(value);
            document.getElementById('speedLabel').textContent = `${value}x`;
        }
    </script>
</body>
</html>
